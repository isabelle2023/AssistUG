<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/backperfil"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4B000000"
        >

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circlevImgPerfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/logoug"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/tvNombrePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circlevImgPerfil"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserratbold"
            android:text="Nombre de perfil"
            android:textColor="@color/white"
            android:textSize="19dp">


        </TextView>

        <TextView
            android:id="@+id/tvCorreoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNombrePerfil"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserratbold"
            android:text="Correo de perfil"
            android:textColor="@color/white"
            android:textSize="15dp">

        </TextView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>