<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.QrAlumnoActivity">


    <LinearLayout
        android:id="@+id/lyContenedorAH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="10dp"
        >

        <ImageButton
            android:id="@+id/btbackqralumno"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:backgroundTint="#00FFFFFF"
            android:rotation="90"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_arrow_down_solid" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratbold"
            android:text="Escanear QR"
            android:textAlignment="center"
            android:textColor="@color/blueoscuro"
            android:textSize="20dp">

        </TextView>

    </LinearLayout>


    <TextView
        android:id="@+id/tvmateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserratregular"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/blueoscuro"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyContenedorAH" />

    <TextView
        android:id="@+id/tvdiaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratregular"
        android:layout_marginTop="30dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/blueoscuro"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tvmateria"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvfechaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text=""
        android:textAlignment="center"
        android:fontFamily="@font/montserratregular"
        android:textColor="@color/blueoscuro"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tvhorarioa"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvhorarioa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserratregular"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/blueoscuro"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tvdiaa"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btscan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserratbold"
        android:background="@drawable/custom_button_blue"
        android:text="Abrir escaner qr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvfechaa"
        android:clickable = "true"/>
</androidx.constraintlayout.widget.ConstraintLayout>