<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueoscuro"
    tools:context=".activity.PerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <ImageButton
                    android:id="@+id/ivbackmenuperfil"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    android:rotation="90"
                    android:src="@drawable/ic_arrow_down_solid"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:tint="@color/white" />
                <TextView
                    android:id="@+id/tvLetreroCrearHorario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserratbold"
                    android:text="Perfil"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>





            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imagen"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_input_imagecircle"
                    android:src="@drawable/logoug"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/ivcambiarimagen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="125dp"
                    android:background="@drawable/custom_button_register"
                    android:padding="14dp"
                    android:src="@drawable/ic_pen_solid"
                    app:layout_constraintBottom_toBottomOf="@+id/imagen"
                    app:layout_constraintEnd_toEndOf="@+id/imagen"
                    app:layout_constraintStart_toStartOf="@+id/imagen"
                    app:layout_constraintTop_toTopOf="@+id/imagen"
                    app:layout_constraintVertical_bias="1.0"
                    app:tint="@color/blueoscuro" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratbold"
                    android:text="¡Hola! "
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    android:typeface="normal"/>
                <TextView
                    android:id="@+id/tvnombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratbold"
                    android:text="Usuario"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:gravity="center_horizontal"/>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:textSize="18dp"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Nombre"
                    android:textColor="@color/white" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvNombreedit"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="20dp"
                    android:paddingTop="5dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_user_solid"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/gris"
                    android:ems="8"
                    android:focusable="false"
                    android:fontFamily="@font/montserratregular"
                    android:inputType="none"
                    android:lineSpacingExtra="6sp"
                    android:textSize="20dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/gris" />

                <ImageButton
                    android:id="@+id/ivcambiarnombre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button_register"
                    android:padding="15dp"
                    android:src="@drawable/ic_pen_solid"
                    app:tint="@color/blueoscuro" />

            </LinearLayout>


            <TextView
                android:id="@+id/textView5"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/montserratbold"
                android:text="Apellido"
                android:textColor="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tvApellido"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="20dp"
                    android:paddingTop="5dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_user_solid"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/gris"
                    android:ems="8"
                    android:fontFamily="@font/montserratregular"
                    android:inputType="none"
                    android:focusable="false"
                    android:lineSpacingExtra="6sp"
                    android:textSize="20dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/gris"  />

                <ImageButton
                    android:id="@+id/ivcambiarapellido"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button_register"
                    android:padding="15dp"
                    android:src="@drawable/ic_pen_solid"
                    app:tint="@color/blueoscuro" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvDescrip"
                android:textSize="18dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/montserratbold"
                android:text="Descripción"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/Lndescrip"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                        <EditText
                            android:id="@+id/etDescrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gris"
                            android:background="@drawable/custom_input"
                            android:ems="12"
                            android:focusable="false"
                            android:inputType="none"
                            android:layout_marginHorizontal="20dp"
                            android:padding="5dp">

                        </EditText>


                <ImageButton
                    android:id="@+id/ivcambiardescrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_register"
                    android:padding="15dp"
                    android:src="@drawable/ic_pen_solid"
                    app:tint="@color/blueoscuro" />

            </LinearLayout>

            <TextView
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/montserratbold"
                android:text="Contraseña"
                android:textColor="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="20dp"
                    android:paddingTop="5dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_lock_solid"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/gris"
                    android:text="*********"
                    android:ems="8"
                    android:fontFamily="@font/montserratregular"
                    android:inputType="none"
                    android:focusable="false"
                    android:lineSpacingExtra="6sp"
                    android:textSize="20dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/gris"  />

                <ImageButton
                    android:id="@+id/ivcambiarcontra"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button_register"
                    android:padding="15dp"
                    android:src="@drawable/ic_pen_solid"
                    app:tint="@color/blueoscuro" />
            </LinearLayout>
   </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>