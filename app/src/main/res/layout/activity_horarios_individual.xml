<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.HorariosIndividualActivity"
    android:orientation="vertical"
    android:weightSum="2">


    <LinearLayout
        android:id="@+id/lyContenedorAH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="10dp"
        >

        <ImageButton
            android:id="@+id/btnregresar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:backgroundTint="#00FFFFFF"
            android:rotation="90"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_arrow_down_solid" />

        <TextView
            android:id="@+id/tvasignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratbold"
            android:text="Horario asignatura"
            android:textAlignment="center"
            android:textColor="@color/blueoscuro"
            android:textSize="20dp">

        </TextView>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvhorario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </androidx.recyclerview.widget.RecyclerView>






</LinearLayout>