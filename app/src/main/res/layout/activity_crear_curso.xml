<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueoscuro"
    tools:context=".activity.CrearCurso">


    <LinearLayout
        android:id="@+id/lyCH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/iBbackcrearcurso"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:background="@android:color/transparent"
                android:rotation="90"
                android:src="@drawable/ic_arrow_down_solid"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvLetreroCrearH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserratbold"
                android:text="Crear curso"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivCrearCurso"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="130dp"
                android:layout_marginEnd="131dp"
                android:src="@drawable/logoug"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivSelectImgCurso"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/ivCrearCurso"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="-12dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/custom_button_register"
                android:padding="5dp"
                android:src="@drawable/ic_camera_solid" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_cardview_white"
            android:orientation="vertical"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvMaestro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/montserratbold"
                        android:text="Maestro cédula"
                        android:textColor="@color/blueoscuro"
                        android:textSize="18dp" />


                    <EditText
                        android:id="@+id/etNomMaestro"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/custom_input"
                        android:drawableStart="@drawable/ic_address_card_solid"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/white"
                        android:ems="10"
                        android:fontFamily="@font/montserratregular"
                        android:hint="Maestro"
                        android:inputType="number"
                        android:lineSpacingExtra="8sp"
                        android:paddingStart="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tvMateriaCH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/montserratbold"
                        android:text="Materia"
                        android:textColor="@color/blueoscuro"
                        android:textSize="18dp" />


                    <EditText
                        android:id="@+id/etNomMateria"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/custom_input"
                        android:drawableStart="@drawable/ic_book_open_reader_solid"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/white"
                        android:ems="10"
                        android:fontFamily="@font/montserratregular"
                        android:hint="Materia"
                        android:inputType="textPersonName"
                        android:lineSpacingExtra="8sp"
                        android:paddingStart="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"/>


                    <TextView
                        android:id="@+id/tvSemestreCH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/montserratbold"
                        android:text="Semestre"
                        android:textColor="@color/blueoscuro"
                        android:textSize="18dp" />


                    <EditText
                        android:id="@+id/etSemestreCH"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/custom_input"
                        android:drawableStart="@drawable/ic_graduation_cap_solid"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/white"
                        android:ems="10"
                        android:fontFamily="@font/montserratregular"
                        android:hint="Semestre"
                        android:inputType="textPersonName"
                        android:lineSpacingExtra="8sp"
                        android:paddingStart="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvGrupoCH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/montserratbold"
                        android:text="Grupo"
                        android:textColor="@color/blueoscuro"
                        android:textSize="18dp" />


                    <EditText
                        android:id="@+id/etGrupoCH"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/custom_input"
                        android:drawableStart="@drawable/ic_users_solid"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/white"
                        android:ems="10"
                        android:fontFamily="@font/montserratregular"
                        android:hint="Grupo"
                        android:inputType="textPersonName"
                        android:lineSpacingExtra="8sp"
                        android:paddingStart="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/white" />



                    <TextView
                        android:id="@+id/tvCarreraCH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/montserratbold"
                        android:text="Carrera"
                        android:textColor="@color/blueoscuro"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_input">

                        <Spinner
                            android:id="@+id/spCarrera"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratregular"
                            android:backgroundTint="@color/black"
                            android:clipChildren="false"
                            android:spinnerMode="dropdown"
                            android:textAlignment="center" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvDatePicker1CH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/montserratbold"
                        android:text="Periodo"
                        android:textColor="@color/blueoscuro"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btnPicker1"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:textSize="18dp"
                            android:drawableEnd="@drawable/ic_baseline_info_24"
                            android:paddingEnd="10dp"
                            android:textColor="@color/white"
                            android:text="Seleccione"
                            android:textAlignment="center"
                            style="?android:spinnerStyle"
                            android:fontFamily="@font/montserratregular"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/custom_input"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratbold"
                            android:text="a"
                            android:layout_marginHorizontal="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/blueoscuro"
                            android:textSize="18dp" />

                        <Button
                            android:id="@+id/btnPicker2"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:text="Seleccione"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:drawableEnd="@drawable/ic_baseline_info_24"
                            android:paddingEnd="10dp"
                            android:textColor="@color/white"
                            android:layout_marginRight="20dp"
                            style="?android:spinnerStyle"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratregular"
                            android:background="@drawable/custom_input" />

                    </LinearLayout>



                    <TextView
                        android:id="@+id/tvDescripcionCH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/montserratbold"
                        android:text="Descripción"
                        android:textColor="@color/blueoscuro"
                        android:textSize="18dp" />


                    <EditText
                        android:id="@+id/etDescripcionCH"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/custom_input"
                        android:drawableStart="@drawable/ic_book_solid"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/white"
                        android:ems="10"
                        android:fontFamily="@font/montserratregular"
                        android:hint="Descripción"
                        android:inputType="textPersonName"
                        android:lineSpacingExtra="8sp"
                        android:paddingStart="10dp"
                        android:textColor="@color/white" />


                    <Button
                        android:id="@+id/btnCrearCH"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/custom_button_register"
                        android:backgroundTint="@color/blueoscuro"
                        android:fontFamily="@font/montserratbold"
                        android:text="CREAR"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                </LinearLayout>

            </ScrollView>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>