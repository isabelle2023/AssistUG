<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:elevation="8dp"
    android:layout_margin="10dp"
    android:background="@drawable/custom_cardview_white_redounded">

    <LinearLayout
        android:id="@+id/linearLayoutColum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:orientation="vertical"
        android:padding="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDiaRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="9dp"
                android:fontFamily="@font/montserratbold"
                android:text="DÍA: "
                android:textAlignment="center"
                android:textColor="@color/blueoscuro"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/DiaRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tvDiaRv"
                android:fontFamily="@font/montserratbold"
                android:text="Lunes"
                android:textAlignment="center"
                android:textColor="@color/blueoscuro"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvHorarioRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DiaRv"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserratbold"
                android:text="HORARIO: "
                android:textAlignment="center"
                android:textColor="@color/blueoscuro"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/HorarioRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DiaRv"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tvHorarioRv"
                android:fontFamily="@font/montserratbold"
                android:text="7AM - 8PM"
                android:textAlignment="center"
                android:textColor="@color/blueoscuro"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/ivEliminarMIRv"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/cerrar">

        </ImageView>

    </RelativeLayout>



</LinearLayout>