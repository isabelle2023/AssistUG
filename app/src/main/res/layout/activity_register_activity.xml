<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btbackregister"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:background="@android:color/transparent"
                    android:rotation="90"
                    android:src="@drawable/ic_arrow_down_solid"
                    app:layout_constraintEnd_toStartOf="@+id/textView"
                    app:layout_constraintHorizontal_bias="0.266"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/blueoscuro" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Registrar alumno"
                    android:textAlignment="center"
                    android:textColor="@color/blueoscuro"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/tvSubirImg"
                    android:layout_width="wrap_content"
                    android:layout_height="173dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logoug"
                    android:background="@drawable/custom_input_imagecircle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/ivSelectImg"
                    android:layout_width="120dp"
                    android:layout_height="79dp"

                    android:layout_marginTop="132dp"
                    android:background="#00D8D0D0"
                    android:src="@drawable/ic_camera_solid"
                    app:civ_border_width="1dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#3f51b5"
                    app:civ_shadow_gravity="center"
                    app:civ_shadow_radius="0.5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.649"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_cardview"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/montserratbold"
                        android:text="Nombre"
                        android:textSize="18dp"
                        android:textColor="@color/white" />

                    <ImageButton

                        android:id="@+id/scrollviewdown"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="250dp"
                        android:backgroundTint="@color/blueoscuro"
                        android:src="@drawable/ic_arrow_down_solid"
                        app:tint="@color/white" />

                </LinearLayout>


                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_user_solid"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:lineSpacingExtra="8sp"
                    android:paddingStart="10dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView5"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Apellido"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etApellido"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_user_solid"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Apellido"
                    android:inputType="textPersonName"
                    android:lineSpacingExtra="8sp"
                    android:paddingStart="10dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Cédula"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/etCedula"

                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_address_card_solid"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Cédula"
                    android:inputType="number"
                    android:lineSpacingExtra="8sp"
                    android:paddingStart="10dp"
                    android:textColor="@color/white" />

                <TextView
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Correo institucional"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_envelope_solid"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:ems="10"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Correo"
                    android:inputType="textPersonName"
                    android:lineSpacingExtra="8sp"
                    android:paddingStart="10dp"
                    android:textColor="@color/white" />

                <TextView
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Contraseña"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserratregular"
                    android:drawableStart="@drawable/ic_baseline_info_24"
                    android:drawablePadding="10dp"
                    android:text="Debe contener al menos 8 caracteres,  1 letra  mayúscula, 1 letra minúscula, 1 caracter especial y 1 número." />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:passwordToggleDrawable="@drawable/eyes"
                    app:helperTextTextColor="@color/white"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@android:color/white"
                    app:placeholderTextColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContra"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@drawable/custom_input"
                        android:drawableTint="@color/white"
                        android:drawableStart="@drawable/ic_lock_solid"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/montserratregular"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:textColor="@color/white"

                        android:textSize="18dp" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/textView7"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Repetir contraseña"
                    android:textColor="@color/white" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtPassword2"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:helperTextTextColor="@color/white"
                    app:hintEnabled="false"
                    app:passwordToggleDrawable="@drawable/eyes"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@android:color/white"
                    app:placeholderTextColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etValcontra"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@drawable/custom_input"
                        android:drawableTint="@color/white"
                        android:drawableStart="@drawable/ic_lock_solid"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/montserratregular"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:textColor="@color/white"

                        android:textSize="18dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/custom_button_register"
                    android:fontFamily="@font/montserratbold"
                    android:gravity="center|center_horizontal"
                    android:text="Registrar"
                    android:textAlignment="center"
                    android:textColor="@color/blueoscuro" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>