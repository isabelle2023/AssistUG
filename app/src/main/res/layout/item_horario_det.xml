<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="#00FFFFFF">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/blueoscuro"
        android:elevation="8dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tvMatriaAHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Materia:"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvNomMatAHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/tvMatriaAHD"
                    android:fontFamily="@font/montserratbold"
                    android:text="NOMBRE DE LA MATERIA"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvHoraAHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNomMatAHD"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Horario:"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvMostrarHoraAHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNomMatAHD"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@+id/tvHoraAHD"
                    android:fontFamily="@font/montserratbold"
                    android:text="7:00 - 8:00 hr"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvSemestreAHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHoraAHD"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Semestre:"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvMostrarSemestreAHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHoraAHD"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/tvSemestreAHD"
                    android:fontFamily="@font/montserratbold"
                    android:text="7o"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvMostrarGrupoAHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHoraAHD"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/tvSemestreAHD"
                    android:fontFamily="@font/montserratbold"
                    android:text="c"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>